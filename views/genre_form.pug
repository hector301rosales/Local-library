extends layout

block content
    h1 #{title}

    form(method='POST' action='')
        div.for-group
            label(for='name') Genre:
            input#name.form-control(type='text',
            placeholder='Fantase, Poetry, etc',
            name='name',
            value=(undefined===genre ? '' : genre.name))
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg
